ion-view(view-title='Car Pooling' hide-back-button='true')
  ion-nav-bar
    ion-nav-back-button.button-clear.force-show(ng-click='goBack()')
      i.color-white.ion-chevron-left
    ion-nav-buttons(side='right')
      button.button-clear.force-show(ui-sref='comunidad-anuncios-new')
        i.color-white.ion-plus-round
  ion-content.padding-top.anuncios-view
    .list
      a.item.item-avatar(ng-repeat='car in carp', ui-sref='comunidad-carp-detail')
        img(ng-src='{{car.img}}')
        small.muted.right {{car.date}} {{car.hourStart}}
        h2 {{car.title}}
        p.muted {{car.desc}}
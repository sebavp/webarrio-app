ion-view(view-title='Recomendaciones' hide-back-button='true')
  ion-nav-bar
    ion-nav-back-button.button-clear.force-show(ng-click='goBack()')
      i.color-white.ion-chevron-left
    ion-nav-buttons(side='right')
      button.button-clear.force-show(ui-sref='comunidad-recomendaciones-new')
        i.color-white.ion-plus-round
  ion-content.padding-top.anuncios-view
    .list
      a.item(ng-if="recomendaciones.length == 0")
        p.text-center
          small
            | No hay Recomendaciones a√∫n
      a.item.item-avatar(ng-repeat='reco in recomendaciones', ui-sref='comunidad-recomendaciones-detail({announcement_id: reco.id})')
        img(src='/img/blank.png')
        small.muted.right.uppercased {{reco.created_at | date: "dd MMM"}}
        h2 {{reco.title}}
        p.muted {{reco.description | truncate: 30: '..'}}

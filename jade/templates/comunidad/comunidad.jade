ion-view(view-title='Comunidad' hide-back-button='true')
  ion-nav-buttons(side='left')
    button.button-clear.force-show(ui-sref="tabs.home")
      i.color-white.ion-chevron-left
  ion-nav-buttons(side='right')
    button.button-clear.force-show(main-sidebar='')
      img.user(src='img/icons/user.svg')
  ion-content.padding-top.comunidad-view
    .list
      a.item.item-icon-left(ui-sref='tabs.comunidad-eventos')
        .icon
          img(src='img/icons/com-eventos.svg')
        | Eventos
      a.item.item-icon-left(ui-sref='tabs.comunidad-mascotas')
        .icon
          img(src='img/icons/com-mascotas.svg')
        | Mascotas
        //- span.badge.badge-assertive 3
      a.item.item-icon-left(ui-sref='tabs.comunidad-recomendaciones')
        .icon
          img(src='img/icons/com-recomendaciones.svg')
        | Recomendaciones
      a.item.item-icon-left(ui-sref='tabs.comunidad-carp')
        .icon
          img(src='img/icons/com-car.svg')
        | Car pooling
      a.item.item-icon-left(ui-sref='tabs.comunidad-anuncios')
        .icon
          img(src='img/icons/com-anuncios.svg')
        | Anuncios
      a.item.item-icon-left(ui-sref='tabs.comunidad-clasificados')
        .icon
          img(src='img/icons/com-clasificados.svg')
        | Clasificados

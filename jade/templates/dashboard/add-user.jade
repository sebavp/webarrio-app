ion-view(view-title='Nuevo Usuario' hide-back-button='true')
  ion-nav-buttons(side='left')
    button.button-clear.force-show(ng-click='goBack()')
      i.color-white.ion-chevron-left
  ion-content.padding-top.instalaciones-detail-view
    .list.padding
      label.item.item-input.item-floating-label
        span.input-label Nombre
        input(type="text" placeholder="Nombre" ng-model="newUser.name")
      label.item.item-input.item-floating-label
        span.input-label Apellido
        input(type="text" placeholder="Apellido" ng-model="newUser.last_name")
      label.item.item-input.item-floating-label
        span.input-label RUT
        input(type="text" placeholder="RUT" ng-model="newUser.rut")
      label.item.item-input.item-floating-label
        span.input-label E-mail
        input(type="text" placeholder="E-mail" ng-model="newUser.email")
  ion-footer-bar.bar-orange.account-footer
    button.button.button-full.pay-button(ng-click="addUserToHome()" ng-disabled="!isValid()")

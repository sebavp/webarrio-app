ion-view(view-title='Alerta Vecinal' hide-back-button='true')
  ion-nav-bar
    ion-nav-back-button.button-clear.force-show(ng-click='goBack()')
      i.color-white.ion-chevron-left
  ion-content.alertavecinal-view
    .list.muted
      .item.item-input
        span.uppercased Ambulancia
        input(type="tel" ng-model="alertNumbers.ambulance" ng-class="{'editing': editingNumber == 'ambulance'}")
        span.help(ng-click="editNumber('ambulance')" ng-show="!editingNumber")
          | Editar
        span.help(ng-click="editNumber(false)" ng-show="editingNumber")
          | Guardar

      .item.item-input
        span.uppercased Bomberos
        input(type="tel" ng-model="alertNumbers.fireman" ng-class="{'editing': editingNumber == 'fireman'}")
        span.help(ng-click="editNumber('fireman')" ng-show="!editingNumber")
          | Editar
        span.help(ng-click="editNumber(false)" ng-show="editingNumber")
          | Guardar

      .item.item-input
        span.uppercased Carabineros
        input(type="tel" ng-model="alertNumbers.police" ng-class="{'editing': editingNumber == 'police'}")
        span.help(ng-click="editNumber('police')" ng-show="!editingNumber")
          | Editar
        span.help(ng-click="editNumber(false)" ng-show="editingNumber")
          | Guardar

      .item.item-input(ng-show="alertNumbers.security")
        span.uppercased Seguridad Ciudadana
        input(type="tel" ng-model="alertNumbers.security" ng-class="{'editing': editingNumber == 'security'}")
        span.help(ng-click="editNumber('security')" ng-show="!editingNumber")
          | Editar
        span.help(ng-click="editNumber(false)" ng-show="editingNumber")
          | Guardar

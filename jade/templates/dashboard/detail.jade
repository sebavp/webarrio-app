ion-view(view-title='Gastos Comunes')
  ion-nav-bar
    ion-nav-back-button.button-clear.force-show(ng-click='goBack()')
      i.color-white.ion-chevron-left
  ion-content.detail-view
    .list
      .item(ng-if="commonExpenses.length == 0")
        p
          span.small No se registran Gastos comunes asociados
      .item.button.button-full.icon-right.ion-ios-arrow-down(ng-repeat='item in commonExpenses', ng-init='hideInfo=true', ng-click='hideInfo=!hideInfo')
        span.upper {{item.month}}
        small.right.red 
          small $
          {{item.total | currency: '':0}}
        .detalle-mes(ng-hide='hideInfo')
          hr
          p  Detalle de {{currentCondo.name}}
          .item.item-icon-left
            i.icon.ion-ios-lightbulb
            span.text-left Luz:
            span.text-right 
              small $
              {{item.total_light | currency: '':0}}
          .item.item-icon-left
            i.icon.ion-waterdrop
            span.text-left Agua:
            span.text-right
              small $
              {{item.total_water | currency: '':0}}
          .item.item-icon-left
            i.icon.ion-ios-flame
            span.text-left Gas:
            span.text-right
              small $
              {{item.total_gas | currency: '':0}}
          .item.item-icon-left
            i.icon.ion-ios-people
            span.text-left Personal:
            span.text-right
              small $
              {{item.total_personal | currency: '':0}}
          hr
          p.red
            span.text-left Total: 
            span.text-right
              small $
              {{item.total_light +  item.total_water + item.total_gas + item.total_personal | currency: '':0}}
  ion-footer-bar.bar-dark.account-footer(ng-if="commonExpenses.length > 0")
    button.button.button-full.pay-button
      | PAGAR

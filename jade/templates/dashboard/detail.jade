ion-view(view-title='Mi Cuenta')
  ion-nav-bar
    ion-nav-back-button.button-clear.force-show(ng-click='goBack()')
      i.color-white.ion-chevron-left
  ion-content.detail-view
    .list
      .item.button.button-full.icon-right.ion-ios-arrow-down(ng-repeat='item in commonExpenses', ng-init='hideInfo=true', ng-click='hideInfo=!hideInfo')
        span.upper {{item.month}}
        .detalle-mes(ng-hide='hideInfo')
          hr
          p  Detalle de Gastos
          .item.item-icon-left
            i.icon.ion-ios-lightbulb
            span.text-left Luz:
            span.text-right {{item.total_light}}
          .item.item-icon-left
            i.icon.ion-waterdrop
            span.text-left Agua:
            span.text-right {{item.total_water}}
          .item.item-icon-left
            i.icon.ion-ios-flame
            span.text-left Gas:
            span.text-right {{item.total_gas}}
          .item.item-icon-left
            i.icon.ion-ios-people
            span.text-left Personal:
            span.text-right {{item.total_personal}}
          hr
          p.red
            span.text-left Total: 
            span.text-right {{item.total_light +  item.total_water + item.total_gas + item.total_personal}}

  ion-nav-bar
    ion-nav-back-button.button-clear.force-show(ui-sref="dashboard-instalaciones")
      i.color-white.ion-chevron-left
  ion-content.padding-top.instalaciones-detail-view
    .list
      .item.item-avatar
        img(src='/img/blank.png')
        h2 {{currentEvent.user_name}}
        p.title 
          small Instalaci√≥n
        p.desc
          small {{currentEvent.place}}
        p.title 
          small Fecha
        p.desc
          small.uppercased {{currentEvent.event_date | date : "EEEE dd 'de' MMMM"}}
        p.title 
          small Horario
        p.desc
          small {{currentEvent.start_time | date : 'HH:mm'}} - {{currentEvent.final_time | date : 'HH:mm'}} HS.